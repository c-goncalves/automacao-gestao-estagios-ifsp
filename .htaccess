Options -Indexes
DirectoryIndex index.php

<FilesMatch "(\.env|config\.php|\.git)">
    Require all denied
</FilesMatch>

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    RewriteRule ^ index.php [L]
</IfModule>